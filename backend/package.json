    "purge:prod": "NODE_ENV=production PURGE_CONFIRM=YES ts-node src/scripts/purgeProdTestData.ts",
    "purge:prod:truck": "NODE_ENV=production PURGE_CONFIRM=YES PURGE_TRUCK_CHECKS=true ts-node src/scripts/purgeProdTestData.ts",
